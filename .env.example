# LinguaAI Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Database (for production deployment)
DATABASE_URL=postgresql://username:password@localhost:5432/linguaai

# Authentication (for production features)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Voice Recognition (optional - for enhanced voice features)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_region

# Development Configuration
NODE_ENV=development
MOCK_AI_SERVICE=true  # Set to false to use real OpenAI API (costs money!)
DEBUG_MODE=true       # Enable debug logging

# Deployment (Vercel/Production)
VERCEL_ENV=development
NEXT_PUBLIC_APP_URL=https://your-app-domain.com
